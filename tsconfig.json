{
	"include": ["src/**/*", "emails/**/*"],
	"exclude": ["node_modules", "dist"],

	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",

		"rootDir": "./src",
		"baseUrl": "./src",
		"types": ["node"],
		"typeRoots": [
			"./src/types",
			"./node_modules/@types"
		],
		"paths": {
			"*": [
				"types/*"
			]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}